<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.anteastra.checktaskonline.entities.Student" table="student" schema="online_lab_checker">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="groupId">
            <column name="group_id" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="surname">
            <column name="surname" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="fathername">
            <column name="fathername" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>